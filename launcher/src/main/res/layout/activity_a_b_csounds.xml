                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"
                    android:id = "@+id/d"
                    android:background="@drawable/d_big"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"
                    android:id = "@+id/e"
                    android:background="@drawable/e_big"/>

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"
                    android:id = "@+id/f"
                    android:background="@drawable/f_big"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"
                    android:id = "@+id/g"
                    android:background="@drawable/g_big"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"
                    android:id = "@+id/h"
                    android:background="@drawable/h_big"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"
                    android:id = "@+id/i"
                    android:background="@drawable/i_big"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"
                    android:id = "@+id/j"
                    android:background="@drawable/j_big"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"
                    android:id = "@+id/k"
                    android:background="@drawable/k_big"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"
                    android:id = "@+id/l"
                    android:background="@drawable/l_big"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"
                    android:id = "@+id/m"
                    android:background="@drawable/m_big"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"
                    android:id = "@+id/n"
                    android:background="@drawable/n_big"/>
