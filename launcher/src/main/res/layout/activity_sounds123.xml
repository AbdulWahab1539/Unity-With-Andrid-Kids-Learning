<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <ScrollView
        android:layout_width="wrap_content"
        android:scrollbars="none"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/zero"
                    android:layout_width="100dp"

                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:onClick="tabToAnimate"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:background="@drawable/zero"></ImageButton>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal" >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"

                    android:id = "@+id/one"
                   android:background="@drawable/one"/>

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"

                    android:id = "@+id/two"
                    android:background="@drawable/two"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"

                    android:id = "@+id/three"
                    android:background="@drawable/three"/>

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_margin="15sp"
                    android:id = "@+id/four"
                 android:background="@drawable/four"/>

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"

                    android:id = "@+id/five"
                   android:background="@drawable/five" />
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"

                    android:id = "@+id/six"
                    android:background="@drawable/six"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"

                    android:id = "@+id/seven"
                    android:background="@drawable/seven"/>
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="15sp"

                    android:id = "@+id/eight"
                    android:background="@drawable/eight"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    android:layout_margin="15sp"
                    android:id = "@+id/nine"
                  android:background="@drawable/nine"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>